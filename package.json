{
  "name": "companion-remote",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn ts-node src/index.ts",
    "build": "rimraf dist && yarn build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
    "license-validate": "yarn sofie-licensecheck"
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "^0.2.2",
    "@types/node": "^14.14.21",
    "@types/sharp": "^0.27.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "^12.16 || 14"
  },
  "dependencies": {
    "@julusian/jpeg-turbo": "^1.0.1",
    "binopsy": "^0.0.0",
    "elgato-stream-deck": "^4.0.1",
    "eventemitter3": "^4.0.7",
    "meow": "^9.0.0",
    "sharp": "^0.27.0",
    "usb-detection": "^4.10.0"
  },
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint --fix"
    ]
  }
}
